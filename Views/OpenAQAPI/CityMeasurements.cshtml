@model IEnumerable<AirQualityMVC.Models.CityMeasurementResults>



<div class="measurementContainer">
    <table  width="100%" >
        <tbody>
            @foreach (var item in Model)
            {
            <div >
                <tr>
                    <td>
                        <h1>Location Code: @Html.DisplayFor(modelItem => item.Location) </h1>
                    </td>
                </tr>
                <tr style="margin-bottom: 0.5em;">
                    <td>
                        <partial name="_CityMeasurementsPartial" model="item.measurements" />
                    </td>
                </tr>
            </div>
            }
        </tbody>
    </table>
</div>

<style>
    .measurementContainer{
       text-align:center;
    }
</style>

