@model IEnumerable<AirQualityMVC.Models.CountryAirQuality>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr class="table-headers">

                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Count)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cities)
                <th>

                </th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cities)
                </td>
                <td>
                    @Html.ActionLink("View Cities", "City", new { Name = item.Name })
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table {
        background-color: white;
        padding: 20em;
    }

    .container {
    }

    .table-headers > th {
        cursor: pointer;
    }
</style>

@section Scripts{

    @*<script src="~/js/" data-rel-js></script>*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.18/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
}